{
    "terminal": {
        "fullscreen": true,
        "width": 120,
        "height": 102,
        "display_mode": 2,
        "fps_limit_enabled": true,
        "fps_limit": 60
    },

    "camera": {
        "view_point": [ -8, -8, -6 ],
        "view_angle_x": 0.5,
        "view_angle_z": 0.8,
        "fov": 70,
        "speed": 3,
        "mouse_sensitivity": 0.1,
        "invert_mouse": true
    }, 

    "object": {
        "model_path": "assets/model/dragon.vox",
        "location": [0,0,0],
        "voxel_size": 0.05,
        "color_index": 3
    },

    "renderer": {
        "ambient_occlusion_samples": 30,
        "max_ray_bounces": 8,
        "grayscale": " .:-=+*#%@"
    },

    "skybox": {
        "enabled": true,
        "file": "assets/skybox/mountains.png"
    }
}

{
  "terminal": {
    "fullscreen": true,
    "width": 120,
    "height": 102,
    "display_mode": 2,
    "fps_limit_enabled": true,
    "fps_limit": 60
  },

  "camera": {
    "view_point": [ 1.5, -0.5, 1.3 ],
    "view_angle_x": -0.5,
    "view_angle_z": -0.8,
    "fov": 85,
    "speed": 0.5,
    "mouse_sensitivity": 0.1
  }, 

  "octree": {
    "center": [ 0.5, 0.5, 0.5 ],
    "side_length": 1,
    "depth": 4
  },

  "lighting": {
    "pointlights": [[ 10, 15, 20, 2 ],
                    [ -15, -10, -20, 2 ]]
  },

  "renderer": {
    "max_ray_bounces": 5,
    "grayscale": " .:-=+*#%@"
  },

  "skybox": {
    "enabled": true,
    "file": "assets/mountains.png"
  }
}

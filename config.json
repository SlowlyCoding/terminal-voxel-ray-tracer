{
  "terminal": {
    "fullscreen": false,
    "width": 120,
    "height": 102,
    "display_mode": 2,
    "fps_limit_enabled": true,
    "fps_limit": 60
  },

  "camera": {
    "view_point": [ 1.5, -0.5, 0.5 ],
    "view_angle_x": 0.01,
    "view_angle_z": 3.1415,
    "fov": 55
  }, 

  "octree": {
    "center": [ 0.5, 0.5, 0.5 ],
    "side_length": 1,
    "depth": 5,
    "same_voxel_size": true
  },

  "lighting": {
    "pointlights": [[ 10, 10, 20, 2 ],
                    [ -10, -10, -20, 2 ]]
  },

  "renderer": {
    "max_ray_bounces": 5,
    "grayscale": " .:-=+*#%@"
  },

  "skybox": {
    "enabled": true,
    "file": "assets/mountains.png"
  }
}
